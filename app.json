{
  "expo": {
    "plugins": [ [ "@react-native-voice/voice", {
      "microphonePermission": "Allow polyglot to access your microphone",
      "speechRecogntionPermission": "Allow polyglot to securely recognize user speech"
    } ] ],
    "name": "polyglot",
    "slug": "polyglot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.peternordel.polyglot"
    },
    "infoPlist": {
      "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to enable speech to speech translation.",
      "NSCameraUsageDescription": "This app uses the camera to let user put a photo in his profile page."
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["android.permission.RECORD_AUDIO"],
      "package": "com.peternordel.polyglot"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "448915ef-703e-4107-ab4e-5b8944fa17d5"
      }
    },
    "owner": "peternordel"
  }
}
